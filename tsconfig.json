{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "dist"
  },
  "include": ["SRC/**/*", "TESTS/**/*"],
  "exclude": ["dist", "node_modules"]
}
